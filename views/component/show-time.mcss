ScryShowTime {
  display: grid
  justify-content: center
  justify-items: center

  div.month {
    color: hsla(0, 0%, 30%, 1)
    font-size: 16px
  }
  div.date {
    font-size: 26px
    font-weight: 600
  }
  div.day {
    color: hsla(0, 0%, 30%, 1)
    font-size: 12px
    font-weight: 600
    text-transform: uppercase
    letter-spacing: 1px
  }
  div.time {
    font-size: 16px

    margin-top: 1rem
  }

  -chosen {
    background: var(--chosen-color) 
  }
  -not-chosen{ opacity: .5 }
}
